# =============================================================================
# Enterprise 3PL WMS - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values

# =============================================================================
# Supabase Configuration
# =============================================================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# AI Configuration (Optional)
# =============================================================================
# Anthropic API key for AI assistant features
ANTHROPIC_API_KEY=your-anthropic-api-key

# =============================================================================
# Application Configuration
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="3PL WMS"

# =============================================================================
# Feature Flags
# =============================================================================
NEXT_PUBLIC_ENABLE_AI_ASSISTANT=false
NEXT_PUBLIC_ENABLE_AUTOMATION=false
NEXT_PUBLIC_ENABLE_REALTIME=true

# =============================================================================
# Localization
# =============================================================================
NEXT_PUBLIC_DEFAULT_LOCALE=nl-NL
NEXT_PUBLIC_DEFAULT_TIMEZONE=Europe/Amsterdam
NEXT_PUBLIC_DEFAULT_CURRENCY=EUR
